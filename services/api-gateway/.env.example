# API Gateway Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-256-bit-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Service URLs
FHIR_SERVER_URL=http://localhost:8080
HL7_PROCESSOR_URL=http://localhost:8081
EPIC_CONNECTION_HUB_URL=https://epic-sandbox.epic.com
AUDIT_SERVICE_URL=http://localhost:8082

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/epic_ehr_db

# OAuth2 Configuration
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/oauth/callback

# EPIC Configuration
EPIC_CLIENT_ID=your-epic-client-id
EPIC_CLIENT_SECRET=your-epic-client-secret
EPIC_REDIRECT_URI=http://localhost:3000/epic/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
